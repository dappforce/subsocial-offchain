{
  "name": "dappforce-offchain-storage",
  "version": "0.1.0",
  "description": "A offcahain storage in PostgeSQL",
  "engines": {
    "node": ">= 10.13"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/express": "^4.17.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^10.14.10",
    "jest": "~24.8.0",
    "moment-timezone": "^0.5.26",
    "nodemon": "^1.18.9",
    "prettier": "~1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tsutils": "~3.14.0",
    "typescript": "3.4.5"
  },
  "scripts": {
    "start": "concurrently \"npm run subscribe\" \"npm run api\" \"npm run ipfs\" \"yarn init-search\"",
    "subscribe": "node ./build/src/subscribe-substrate/server.js",
    "api": "node ./build/src/express-api/server.js",
    "init-search": "node ./build/src/search/index.js",
    "init-offchain": "node ./build/src/sql/init.js",
    "clear-offchain": "node ./build/src/sql/clear-db.js",
    "ipfs": "yarn jsipfs daemon",
    "clean": "rimraf coverage build tmp",
    "copy-sql": "find ./src -name '*.sql' | cpio -pd ./build",
    "build": "yarn copy-sql && tsc -p tsconfig.release.json",
    "build:watch": "yarn copy-sql && tsc -w -p tsconfig.release.json",
    "lint": "tsc --noEmit && eslint '*/**/*.{ts,tsx}' --quiet --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "setup": "yarn init-offchain && yarn build"
  },
  "author": "DappForce contributors",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@elastic/elasticsearch": "^7.4.0",
    "@polkadot/dev": "^0.50.0",
    "@subsocial/api": "^0.1.16",
    "@subsocial/types": "^0.1.15",
    "@types/axios": "^0.14.0",
    "@types/chalk": "^2.2.0",
    "@types/cli-progress": "^1.8.1",
    "@types/cors": "^2.8.6",
    "@types/numeral": "^0.0.25",
    "axios": "^0.19.0",
    "bn.js": "^4.11.8",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cids": "^0.7.1",
    "cli-progress": "^2.1.1",
    "commander": "^2.20.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "frappe-charts": "^1.2.3",
    "ipfs": "^0.41.2",
    "libp2p": "^0.27.3",
    "lodash": "^4.17.11",
    "multer": "^1.4.2",
    "numeral": "^2.0.6",
    "pg": "^7.12.1",
    "recharts": "^1.6.2",
    "tslib": "~1.10.0"
  }
}
